<?xml version="1.0"?>
<package>
  <name>csapex_video</name>

  <version>0.0.1</version>
  <description>
    The csapex_video contains plugins which allow the creation of videos and screenshots.
    Besides that, it is possible to create image in image views.
  </description>

  <maintainer email="sebastian.buck@uni-tuebingen.de">buck</maintainer>

  <license>BSD</license>
  <author email="sebastian.buck@uni-tuebingen.de">buck</author>

  <buildtool_depend>catkin</buildtool_depend>

  <build_depend>csapex</build_depend>
  <run_depend>csapex</run_depend>

  <build_depend>csapex_opencv</build_depend>
  <run_depend>csapex_opencv</run_depend>

  <export>
    <csapex plugin="${prefix}/plugins.xml" />
  </export>
</package>
